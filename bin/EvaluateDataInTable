# Inclusions obligatoires
use strict;
use warnings;
use Getopt::Std;
use ScriptCooker::Log 2.1.0 qw{$logger _t set_exit_code};
use Carp;

use File::Basename;

# variables globales

sub usage {
    die(_t("Usage: [_1]",<<USAGE ));
EvaluateDataInTable [-h] [-s] table
USAGE
}

#  Traitement des Options
###########################################################

my %opts;
getopts( 'hsv', \%opts ) or usage();

usage() if $opts{h};

my $no_header = $opts{s};


#  Traitement des arguments
###########################################################

if ( @ARGV != 1 ) {
    $logger->error( _t("Le nombre d'arguments est incorrect"));
    usage();
}


#  Corps du script
###########################################################

if ( ! $ENV{IT20_COMPLIANT} ) {
    warn (_t("La commande [_1] est obsolete",basename($0)));
    set_exit_code(0);
}

my @system_command=('Select','-e');

push @system_command, '-s' if $no_header;

push @system_command, 'FROM', @ARGV;

system @system_command;
if ( $? == -1) {
    die(_t("Problème lors du lancement de la commande [_1]", join(' ',@system_command)));
}
else {
    my $return_code=$?>>8;
    set_exit_code($return_code);
}
